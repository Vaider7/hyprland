#!/usr/bin/nu

def mute [] {
  pulseaudio-ctl mute
}

def inc_volume [] {
  pulseaudio-ctl up
  mpg123 ~/.config/hypr/sounds/pew.mp3
}

def dec_volume [] {
  pulseaudio-ctl down
  mpg123 ~/.config/hypr/sounds/pew.mp3
}

def main [--inc --dec --mute] {
  if $inc {
    inc_volume

    exit 0
  }
  
  if $dec {
    dec_volume

    exit 0
  }

  if $mute {
    mute

    exit 0
  }
}
